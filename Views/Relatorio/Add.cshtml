@model RelatorioDTO
@{
	ViewData["Title"] = "Registro de relatório";
}

<form asp-route-candidaturaId="@Model.CandidaturaId" asp-controller="Relatorio" asp-action="Add" method="post">
	<div class="form-group">
		<label asp-for="Titulo">Título</label>
		<input type="text" asp-for="Titulo" class = "form-control" />
		<span asp-validation-for="Titulo" class = "text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Descricao">Descrição</label>
		<textarea asp-for="Descricao" class = "form-control"></textarea>
		<span asp-validation-for="Descricao" class = "text-danger"></span>
	</div>
	<br />
	<div class="d-grid gap-2">
		<button class = "btn btn-primary" type="submit">Cadastrar</button>
	</div>
</form>